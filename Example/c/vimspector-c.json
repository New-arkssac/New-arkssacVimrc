{
  "configurations": {
    "Launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "name": "cdebug",
        "type": "cdbg",
        "filetyp": [
          "c"
        ],
        "request": "launch",
        "program": "${workspaceRoot}/${fileBasenameNoExtension}",
        "env": {
                  "BASEPATH": "${workspaceRoot}/.nvim"
        },
        "args": [],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": "true",
        "MIMode": "gdb"
      }
    }
  }
}
